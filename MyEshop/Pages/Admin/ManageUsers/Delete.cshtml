@page
@model MyEshop.Pages.Admin.ManageUsers.DeleteModel

@{
    ViewData["Title"] = "حذف کاربر";
}

<h1 class="text-center mt-4">حذف کاربر</h1>
<hr class="mt-4" />

<div class="row">
    <div class="col-md-12">
        <form method="post" class="text-center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="input-icons">
                <label asp-for="Users.FirstName" class="control-label"></label>
                <input asp-for="Users.FirstName" class="small-input form-control mb-2 text-center" readonly />
            </div>

            <div class="input-icons">
                <label asp-for="Users.LastName" class="control-label"></label>
                <input asp-for="Users.LastName" class="small-input form-control mb-2 text-center" readonly />
            </div>

            <div class="input-icons">
                <label asp-for="Users.Email" class="control-label"></label>
                <input asp-for="Users.Email" class="small-input form-control mb-2 text-center" readonly />
            </div>

            <div class="input-icons">
                <label asp-for="Users.Password" class="control-label"></label>
                <input asp-for="Users.Password" class="small-input form-control mb-2 text-center" readonly />
            </div>

            <div class="input-icons">
                <label asp-for="Users.RegisterDate" class="control-label"></label>
                <input asp-for="Users.RegisterDate" class="small-input form-control mb-2 text-center" readonly />
            </div>

            <div class="text-center mt-4 ml-4 form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Users.IsAdmin" disabled="disabled" /> @Html.DisplayNameFor(model => model.Users.IsAdmin)
                </label>
            </div>

            <div class="user-delete-alert alert alert-warning text-center">
                <p>آیا حذف کاربر اطمینان دارید ؟</p>
            </div>

            <div class="mt-4">
                <input type="hidden" asp-for="Users.UserId" />
                <button type="submit" class="user-delete-btn btn btn-danger">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person-x" viewBox="0 0 16 16">
                        <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                        <path fill-rule="evenodd" d="M12.146 5.146a.5.5 0 0 1 .708 0L14 6.293l1.146-1.147a.5.5 0 0 1 .708.708L14.707 7l1.147 1.146a.5.5 0 0 1-.708.708L14 7.707l-1.146 1.147a.5.5 0 0 1-.708-.708L13.293 7l-1.147-1.146a.5.5 0 0 1 0-.708z" />
                    </svg>
                </button>
                <a class="ml-4" asp-page="./Index">بازگشت</a>
            </div>
        </form>
    </div>
</div>
