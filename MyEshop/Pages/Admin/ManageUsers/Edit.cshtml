@page
@model MyEshop.Pages.Admin.ManageUsers.EditModel

@{
    ViewData["Title"] = "ویرایش کاربر";
}

<h1 class="text-center mt-4">ویرایش کاربر</h1>
<a asp-page="/Admin/ManageUsers/Index">بازگشت</a>
<hr />

<div class="row">
    <div class="col-md-12">
        <form method="post" class="text-center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Users.UserId" />

            <div class="input-icons">
                <label asp-for="Users.FirstName" class="control-label"></label>
                <input asp-for="Users.FirstName" class="small-input form-control mb-2" />
                <span asp-validation-for="Users.FirstName"></span>
            </div>

            <div class="input-icons">
                <label asp-for="Users.LastName" class="control-label"></label>
                <input asp-for="Users.LastName" class="small-input form-control mb-2" />
                <span asp-validation-for="Users.LastName"></span>
            </div>

            <div class="input-icons">
                <label asp-for="Users.Email" class="control-label"></label>
                <input asp-for="Users.Email" class="small-input form-control mb-2" />
                <span asp-validation-for="Users.Email"></span>
            </div>

            <div class="input-icons">
                <label asp-for="Users.Password" class="control-label"></label>
                <input asp-for="Users.Password" class="small-input form-control mb-2" />
                <span asp-validation-for="Users.Password"></span>
            </div>

            <div class="input-icons">
                <label asp-for="Users.RegisterDate" class="control-label"></label>
                <input asp-for="Users.RegisterDate" class="small-input form-control mb-2" />
                <span asp-validation-for="Users.RegisterDate"></span>
            </div>

            <div class="text-center mt-4 ml-4 form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Users.IsAdmin" /> @Html.DisplayNameFor(model => model.Users.IsAdmin)
                </label>
            </div>

            <div class="text-center form-group mt-4">
                <button type="submit" class="button-33">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person-check" viewBox="0 0 16 16">
                        <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                        <path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                    </svg>
                </button>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
