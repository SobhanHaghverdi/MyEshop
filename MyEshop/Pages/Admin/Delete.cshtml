@page
@model MyEshop.Pages.Admin.DeleteModel
@{
    ViewData["Title"] = "حذف محصول";
}
<h1 class="text-center mt-4">حذف محصول</h1>
<hr class="mt-4" />

<form method="post" class="product-info-form text-center mt-4">
    <input type="hidden" asp-for="Product.Id" />
    <div class="form-group">
        <img src="/images/@(Model.Product.Id).jpg" class="product-img-delete img-thumbnail" loading="lazy" />
    </div>

    <div class="form-group">
        <label asp-for="Product.Name" class="control-label"></label>
        <input asp-for="Product.Name" class="form-control mb-4 text-center" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Product.Description" class="control-label"></label>
        <textarea asp-for="Product.Description" class="form-control mb-4 text-justify" readonly style="resize:none;height:200px;"></textarea>
    </div>

    <div class="alert alert-warning ">
        <p>آیا حذف محصول اطمینان دارید ؟</p>
    </div>
    <div class=" form-group">
        <button type="submit" class="product-delete-btn btn btn-danger">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-bag-x" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M6.146 8.146a.5.5 0 0 1 .708 0L8 9.293l1.146-1.147a.5.5 0 1 1 .708.708L8.707 10l1.147 1.146a.5.5 0 0 1-.708.708L8 10.707l-1.146 1.147a.5.5 0 0 1-.708-.708L7.293 10 6.146 8.854a.5.5 0 0 1 0-.708z" />
                <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z" />
            </svg>
        </button>
        <a asp-page="/Admin/Index" class="ml-4">بازگشت</a>
    </div>
</form>

