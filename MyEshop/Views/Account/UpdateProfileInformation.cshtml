@model EditProfileViewModel

@{
    ViewData["Title"] = "ویرایش حساب کاربری";
}
<div class="pr-5">
    <h1 class="text-center mt-4">ویرایش حساب کاربری</h1>
    <hr class="mt-4 w-75" />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="ChangeProfileInfo" method="post">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="input-icons">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control small-input" autocomplete="off" />
                    <span asp-validation-for="FirstName"></span>
                </div>

                <div class="input-icons">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control small-input" autocomplete="off" />
                    <span asp-validation-for="LastName"></span>
                </div>

                <div class="input-icons">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control small-input" autocomplete="off" />
                    <span asp-validation-for="Password"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <input asp-controller="Account" asp-action="UpdateProfileInformation" type="submit" value="ویرایش" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
