<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <partial name="_StylesLink" />

</head>
<body class="rtl">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">فروشگاه سبحان</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="http://example.com" id="dropdown09" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">تماس با ما</a>
                        <div class="dropdown-menu">
                            <ul class="dropdown-ul">
                                <li class="dropdown-li-style py-2">
                                    <a asp-controller="Home" asp-action="AboutUs">درباره ما</a>
                                </li>
                                <li class="dropdown-li-style py-2">
                                    <a href="https://t.me/Sobhan_Haghverdi">تلگرام</a>
                                </li>
                                <li class="dropdown-li-style py-2">
                                    <a href="https://instagram.com/sobhan_haghverdii">صفحه اینستاگرام</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <partial name="_Groups" />
                </ul>

                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right pl-5">
                        <li class="nav-item dropdown pl-5">
                            <a class="nav-link dropdown-toggle text-white pr-4" href="http://example.com" id="dropdown09" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@User.Identity.Name</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown09">
                                <ul class="dropdown-ul">
                                    @if (User.HasClaim("IsAdmin", Convert.ToString(true)))
                                    {
                                        <li class="dropdown-li-style py-2">
                                            <a asp-page="/Admin/Index">پنل ادمین</a>
                                        </li>
                                        <li class="dropdown-li-style py-2">
                                            <a asp-page="/Admin/ManageUsers/Index">پنل کاربران</a>
                                        </li>
                                    }
                                    <li class="dropdown-li-style py-2">
                                        <a href="/Profile">حساب کاربری</a>
                                    </li>
                                    <li class="dropdown-li-style py-2">
                                        <a href="/EditProfile"> ویرایش حساب کاربری</a>
                                    </li>
                                    <li class="dropdown-li-style py-2">
                                        <a href="/Cart">سبد خرید</a>
                                    </li>
                                    <li class="dropdown-li-style py-2">
                                        <a href="/Logout">خروج</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person-circle text-white " viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                    </svg>
                }
                else
                {
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person text-white" viewBox="0 0 16 16">
                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                    </svg>

                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/Register" class="nav-link text-white">ثبت نام</a></li>
                        <li><a href="/Login" class="nav-link text-white">ورود</a></li>
                    </ul>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-md-2" id="Groups">
                @await Component.InvokeAsync("ProductGroupsComponent")
            </div>
            <div class="col-md-10">
                @RenderBody()
            </div>
        </div>
    </div>
    <partial name="_Footer" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
